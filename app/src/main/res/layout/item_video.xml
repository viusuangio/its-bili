<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingLeft="16dp"
    android:clickable="false"
    android:layout_width="match_parent"
    android:layout_height="90dp">

    <android.support.v7.widget.CardView
        android:layout_width="100dp"
        android:layout_height="68dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="2dp">
        <ImageView
            android:id="@+id/iv_cover"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/ll_video"
        android:clickable="true"
        android:background="@drawable/selector_item"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_title"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="14sp"
            android:text="Video title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_upName"
                android:text="UP's name"
                android:drawablePadding="6dp"
                android:textSize="12sp"
                android:textColor="#6e6e6e"
                android:drawableLeft="@drawable/ic_person_black_14dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_view"
                android:text="1314"
                android:drawablePadding="6dp"
                android:layout_width="0dp"
                android:textSize="12sp"
                android:textColor="#6e6e6e"
                android:drawableLeft="@drawable/ic_play_arrow_black_14dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tv_date"
                android:text="2018-01-04"
                android:drawablePadding="6dp"
                android:layout_width="0dp"
                android:textSize="12sp"
                android:textColor="#6e6e6e"
                android:drawableLeft="@drawable/ic_access_time_black_14dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>